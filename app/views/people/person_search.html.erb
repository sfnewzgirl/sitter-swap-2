
<div class="container-fluid">
  <div class="row">
    <div class="col-sm-12">
      <p>Search for a person by <i>email</i>. For example, name@example.com.</p>
    </div>
  </div>
  <div class="row">
    <div class="col-sm-12" id="search-bar">
      <%= form_tag("/people/person_search", method: "get") do %>
        <%= label_tag(:q, "Search for a person") %>
        <%= text_field_tag(:q) %>
        <%= submit_tag("Search") %>
      <% end %>
    </div>
  </div>
  <div class="row">
    <div class="col-md-6 col-sm-12">
      <p>Search Results:</p>
      <hr>
      <ul>
        <% @results.each do |result| %>
          <li>
            <%= link_to result.family_name, '/families/' + result.id.to_s, role: "caregivers" %>
            <div class="actions">
              <%= button_to "Confirm Sitter", family_people_create_path, params: {role: "sitters", family_id: result.id}, form_class: "new-thing" %>
            </div>
          </li>
        <% end %>
      </ul>
    </div>
</div>
